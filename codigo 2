#include <iostream>
using namespace std;

int main() 
{
    
    int N, suma=0;
    cout<<"ingrese el rango mayor: ";
    cin>>N;
    for(int i=2;i<=N;i=i+2)
        suma=suma+i;
    cout<<"la suma es: "<<suma;    

    return 0;
}
